{
  "name": "web-starter-template",
  "version": "1.0.0",
  "description": "Demo project for building a basic node site, using bootstrap, ci",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisAchinga/web-starter-template.git"
  },
  "bugs": {
    "url": "https://github.com/ChrisAchinga/web-starter-template/issues"
  },
  "homepage": "https://github.com/ChrisAchinga/web-starter-template#readme",
  "scripts": {
    "build": "npm run css",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o assets/css/bootstrap/",
    "css-prefix": "postcss --replace assets/css/bootstrap/starter.css --use autoprefixer --map",
    "css-purge": "purgecss --css assets/css/bootstrap/starter.css --content index.html --output assets/css/bootstrap/",
    "css": "npm run css-compile && npm run css-prefix",
    "start": "serve --listen 3000",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm run css"
  },
  "keywords": [
    "bootstrap",
    "sass",
    "css",
    "javascript",
    "starter",
    "template"
  ],
  "author": "mdo",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^5.0.0--alpha",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "autoprefixer": "^9.8.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "postcss-cli": "^7.1.1",
    "purgecss": "^2.1.2",
    "serve": "^11.3.0"
  }
}
